<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile_card"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardBackgroundColor="#e74c3c"
            android:alpha="0.9"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:paddingStart="60dp"
                android:paddingTop="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="73dp"
                    android:layout_height="89dp"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/list_profile" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/list_fonts"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Profile" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tools_card"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardBackgroundColor="#1ABC9C"
            android:alpha="1"
            android:clickable="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:paddingStart="50dp"
                android:paddingTop="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tools" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:text="Tools"
                    style="@style/list_fonts" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/custom_view_card"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardBackgroundColor="#9B59B6"
            android:alpha="1"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingTop="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="73dp"
                    android:layout_height="89dp"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/custom_view" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:text="Custom View"
                    style="@style/list_fonts" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/animations_card_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardBackgroundColor="#C0392B"
            android:alpha="0.9"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingTop="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="73dp"
                    android:layout_height="89dp"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/list_animations" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:text="Animations"
                    style="@style/list_fonts" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardBackgroundColor="#008080"
            android:alpha="0.9"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:paddingStart="50dp"
                android:paddingTop="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="73dp"
                    android:layout_height="89dp"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_settings" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:text="Settings"
                    style="@style/list_fonts" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>

</layout>